		<TextBox Name="statusTextBox" FontSize="20" HorizontalAlignment="Left" Height="51" Margin="123,70,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="171"/>
		<TextBox Name="stepsTextBox" FontSize="20" HorizontalAlignment="Left" Height="49" Margin="123,126,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="171"/>
		<Label Content="Steps" FontSize="20"  HorizontalAlignment="Left" Height="50" Margin="10,126,0,0" VerticalAlignment="Top" Width="92"/>
		<Label Name="resultLabel" FontSize="20" Content="" HorizontalAlignment="Center" Height="51" Margin="0,188,0,0" VerticalAlignment="Top" Width="159"/>

	</Grid>
</Window>
